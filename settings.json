{
  "editor.fontSize": 16,
  "editor.lineHeight": 1.8,
  "editor.formatOnSave": true,
  "editor.fontLigatures": true,
  "editor.cursorSmoothCaretAnimation": "on",
  "editor.cursorBlinking": "expand",
  "editor.wordWrap": "on",
  "editor.linkedEditing": true,
  "editor.scrollbar.vertical": "hidden",
  "editor.minimap.enabled": false,
  "editor.detectIndentation": false,
  "editor.tabSize": 2,
  "terminal.integrated.fontSize": 15,
  "terminal.integrated.enableMultiLinePasteWarning": "never",
  "breadcrumbs.enabled": false,
  "javascript.updateImportsOnFileMove.enabled": "always",
  "editor.tokenColorCustomizations": {
    "textMateRules": [
      {
        "scope": [
          "comment",
          "comment.line.double-slash",
          "entity.other.attribute-name.js",
          "variable.parameter",
          "meta.parameters"
        ],
        "settings": {
          "fontStyle": ""
        }
      }
    ]
  },
  "workbench.colorCustomizations": {
    "editorCursor.foreground": "#FFC94A",
    // "editorGroupHeader.tabsBackground": "#0F0F17",
    "tab.activeForeground": "#61FFCA",
    "tab.activeBorderTop": "#61FFCA",
  },
  "workbench.colorTheme": "Aura Dark",
  "workbench.activityBar.location": "hidden",
  "workbench.iconTheme": "moxer-icons",
  "workbench.statusBar.visible": false,
  "workbench.layoutControl.enabled": false,
  "window.commandCenter": false,
  "window.titleBarStyle": "native",
  // Change font
  "editor.fontFamily": "Andale Mono",
  "terminal.integrated.fontFamily": "Andale Mono",
  "scm.inputFontFamily": "Geist Mono",
  "chat.editor.fontFamily": "Geist Mono",
  "debug.console.fontFamily": "Geist Mono",
  "editor.codeLensFontFamily": "Geist Mono",
  "notebook.output.fontFamily": "Geist Mono",
  "markdown.preview.fontFamily": "Geist Mono",
  "editor.inlayHints.fontFamily": "Geist Mono",
  "apc.font.family": "Geist Mono",
  "apc.monospace.font.family": "Geist Mono",
  "apc.listRow": {
    "height": 24
  },
  "apc.stylesheet": {
    ".pane-body": "padding: 0 8px",
  },
}